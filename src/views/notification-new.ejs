<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema ENEDES</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Saira+Condensed:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.min.js" defer></script>
</head>
<body class="bg-gray-100 font-sans">
    <header class="bg-white text-gray-800 p-4 shadow">
        <div class="container mx-auto flex justify-between items-center">
            <!-- Logo and Title -->
            <div class="flex items-center space-x-8">
                <img src="/img/Enedes_Vert.png" alt="ENEDES Logo" class="h-40 w-40 object-contain">
               <h1 class="text-2xl font-bold" style="font-family: 'Saira Condensed', sans-serif;   font-weight: 600;
  font-style: normal;">Sistema de GestÃ£o e Controle - ENEDES</h1>
            </div>
            <!-- Responsive Menu -->
            <div x-data="{ open: false }" class="flex items-center">
                <!-- Hamburger Button for Mobile -->
                <button @click="open = !open" class="md:hidden focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
                <!-- Menu Items -->
                <nav x-bind:class="{ 'block': open, 'hidden': !open }" class="md:flex md:items-center md:space-x-4 absolute md:static top-16 right-0 bg-white md:bg-transparent shadow-md md:shadow-none p-4 md:p-0">
                      <a href="/dashboard" class="block px-4 py-2 hover:bg-gray-100 rounded-md md:hover:bg-transparent md:hover:underline"">ðŸ“Š Dashboard</a>
                    <a href="/logout" class="block px-4 py-2 hover:bg-gray-100 rounded-md md:hover:bg-transparent md:hover:underline">ðŸšª Sair</a>
                </nav>
            </div>
        </div>
    </header>

<main class="container mx-auto p-4">
    <div class="container mx-auto mt-6 px-4">
        <div class="bg-white shadow-md rounded-lg p-6">
            <h2 class="text-xl font-semibold mb-4">Nova NotificaÃ§Ã£o</h2>
            <% if (error) { %>
                <p class="text-red-500 mb-4"><%= error %></p>
            <% } %>
            <form action="/notification/create" method="POST">
                <div class="mb-4">
                    <label class="block text-gray-700">Tipo</label>
                    <select name="type" class="w-full p-2 border rounded">
                        <option value="info">Info</option>
                        <option value="success">Sucesso</option>
                        <option value="warning">Aviso</option>
                        <option value="error">Erro</option>
                    </select>
                </div>
                 <div class="mb-4">
                    <label class="block text-gray-700">Titulo</label>
                    <textarea name="title" class="w-full p-2 border rounded" required></textarea>
                </div>                
                <div class="mb-4">
                    <label class="block text-gray-700">Mensagem</label>
                    <textarea name="message" class="w-full p-2 border rounded" required></textarea>
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700">DestinatÃ¡rio (opcional)</label>
                    <select name="user_id" class="w-full p-2 border rounded">
                        <option value="">Nenhum</option>
                        <% users.forEach(user => { %>
                            <option value="<%= user.id %>"><%= user.name %></option>
                        <% }) %>
                    </select>
                </div>
                              
                <div class="flex justify-end">
                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">Criar NotificaÃ§Ã£o</button>
                </div>
            </form>
        </div>
    </div>
    </main>
</body>
</html>