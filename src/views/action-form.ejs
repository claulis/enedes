<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema ENEDES - Nova A√ß√£o</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <nav class="bg-blue-600 text-white p-4 flex justify-between items-center">
        <h1 class="text-xl font-bold">Sistema ENEDES</h1>
        <div>
            <a href="/dashboard" class="mr-4">üìä Dashboard</a>
            <a href="/export" class="mr-4">üì• Exportar</a>
            <a href="/logout">üö™ Sair</a>
        </div>
    </nav>

    <div class="container mx-auto p-6">
        <h2 class="text-2xl font-bold mb-6">Nova A√ß√£o</h2>
        <% if (error) { %>
            <div class="bg-red-100 text-red-700 p-4 rounded mb-4"><%= error %></div>
        <% } %>

        <form action="/action" method="POST" enctype="multipart/form-data" class="bg-white p-6 rounded shadow">
            <div class="mb-6">
                <h3 class="text-lg font-semibold mb-4">üìã Informa√ß√µes B√°sicas</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label for="task" class="block text-sm font-medium text-gray-700">Tarefa/A√ß√£o *</label>
                        <input type="text" name="task" id="task" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                    </div>
                    <div>
                        <label for="responsible" class="block text-sm font-medium text-gray-700">Respons√°vel *</label>
                        <select name="responsible" id="responsible" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="">Selecione um respons√°vel...</option>
                            <% collaborators.forEach(collaborator => { %>
                                <option value="<%= collaborator.name %>"><%= collaborator.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label for="section" class="block text-sm font-medium text-gray-700">Se√ß√£o *</label>
                        <select name="section" id="section" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="">Selecione uma se√ß√£o...</option>
                            <% sections.forEach(section => { %>
                                <option value="<%= section %>"><%= section %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div>
                        <label for="deadline" class="block text-sm font-medium text-gray-700">Deadline *</label>
                        <input type="date" name="deadline" id="deadline" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                    </div>
                    <div>
                        <label for="budget" class="block text-sm font-medium text-gray-700">Or√ßamento</label>
                        <input type="text" name="budget" id="budget" placeholder="R$ 0,00" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                    </div>
                    <div>
                        <label for="status" class="block text-sm font-medium text-gray-700">Status *</label>
                        <select name="status" id="status" required class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="pendente">Pendente</option>
                            <option value="em_andamento">Em Andamento</option>
                            <option value="alerta">Alerta</option>
                            <option value="concluida">Conclu√≠da</option>
                            <option value="atrasado">Atrasado</option>
                        </select>
                    </div>
                    <div class="md:col-span-2">
                        <label for="description" class="block text-sm font-medium text-gray-700">Descri√ß√£o</label>
                        <textarea name="description" id="description" rows="4" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm"></textarea>
                    </div>
                </div>
            </div>

            <div class="mb-6">
                <h3 class="text-lg font-semibold mb-4">‚úÖ Tarefas</h3>
                <div id="tasks-container">
                    <div class="task-item mb-4">
                        <div class="flex items-center">
                            <input type="text" name="tasks[0][description]" placeholder="Descri√ß√£o da tarefa" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                            <input type="checkbox" name="tasks[0][completed]" class="ml-4">
                            <label class="ml-2">Conclu√≠da</label>
                        </div>
                    </div>
                </div>
                <button type="button" onclick="addTask()" class="text-blue-600">‚ûï Adicionar Tarefa</button>
            </div>

            <div class="mb-6">
                <h3 class="text-lg font-semibold mb-4">üìé Anexos</h3>
                <input type="file" name="attachments" multiple class="mt-1 block w-full">
                <p class="text-sm text-gray-600">Formatos permitidos: PDF, DOCX, XLSX, JPG, PNG (m√°x. 10MB)</p>
            </div>

            <div class="mb-6">
                <h3 class="text-lg font-semibold mb-4">üìù Observa√ß√µes</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div class="md:col-span-2">
                        <label for="note" class="block text-sm font-medium text-gray-700">Observa√ß√µes</label>
                        <textarea name="note" id="note" rows="4" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm"></textarea>
                    </div>
                    <div>
                        <label class="flex items-center">
                            <input type="checkbox" name="completed" class="mr-2">
                            A√ß√£o conclu√≠da
                        </label>
                    </div>
                    <div>
                        <label class="flex items-center">
                            <input type="checkbox" name="validated" class="mr-2">
                            Validada pela coordena√ß√£o
                        </label>
                    </div>
                    <div>
                        <label for="priority" class="block text-sm font-medium text-gray-700">Prioridade</label>
                        <select name="priority" id="priority" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                            <option value="low">Baixa</option>
                            <option value="medium" selected>M√©dia</option>
                            <option value="high">Alta</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="flex justify-end space-x-4">
                <a href="/dashboard" class="bg-gray-600 text-white px-4 py-2 rounded">Cancelar</a>
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Salvar A√ß√£o</button>
            </div>
        </form>
    </div>

    <script>
        let taskCount = 1;
        function addTask() {
            const container = document.getElementById('tasks-container');
            const taskDiv = document.createElement('div');
            taskDiv.className = 'task-item mb-4';
            taskDiv.innerHTML = `
                <div class="flex items-center">
                    <input type="text" name="tasks[${taskCount}][description]" placeholder="Descri√ß√£o da tarefa" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm">
                    <input type="checkbox" name="tasks[${taskCount}][completed]" class="ml-4">
                    <label class="ml-2">Conclu√≠da</label>
                </div>
            `;
            container.appendChild(taskDiv);
            taskCount++;
        }
    </script>
</body>
</html>