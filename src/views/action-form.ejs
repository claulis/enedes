<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema ENEDES - Nova A√ß√£o</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body class="bg-white">
    <header class="bg-primary text-white text-center py-3 shadow-sm">
        <div class="container">
            <h1 class="display-5 fw-bold">Sistema ENEDES</h1>
            <nav class="mt-2 d-flex justify-content-center flex-wrap gap-2">
                <a href="/export" class="btn btn-outline-light btn-sm">üì• Exportar</a>
                <a href="/logout" class="btn btn-outline-light btn-sm">üö™ Sair</a>
            </nav>
        </div>
    </header>
    <main class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
        <div class="p-4 rounded-3 shadow bg-white border border-primary border-opacity-50 w-100" style="max-width: 600px;">
            <h2 class="mb-4 fw-bold text-dark">Nova A√ß√£o</h2>
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form action="/action" method="POST">
                <div class="card mb-3 border-primary border-opacity-50">
                    <div class="card-header bg-primary text-white">üìã Informa√ß√µes B√°sicas</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="task" class="form-label text-dark">Tarefa/A√ß√£o *</label>
                            <input type="text" class="form-control form-control-sm" id="task" name="task" required>
                        </div>
                        <div class="mb-3">
                            <label for="responsible" class="form-label text-dark">Respons√°vel *</label>
                            <input type="text" class="form-control form-control-sm" id="responsible" name="responsible" required>
                        </div>
                        <div class="mb-3">
                            <label for="section" class="form-label text-dark">Se√ß√£o *</label>
                            <select class="form-select form-select-sm" id="section" name="section" required>
                                <option value="" disabled selected>Selecione uma se√ß√£o...</option>
                                <% sections.forEach(section => { %>
                                    <option value="<%= section %>"><%= section %></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="created_date" class="form-label text-dark">Data de Cadastro *</label>
                            <input type="date" class="form-control form-control-sm" id="created_date" name="created_date" value="<%= new Date().toISOString().split('T')[0] %>" required>
                        </div>
                        <div class="mb-3">
                            <label for="deadline" class="form-label text-dark">Deadline *</label>
                            <input type="date" class="form-control form-control-sm" id="deadline" name="deadline" required>
                        </div>
                        <div class="mb-3">
                            <label for="budget" class="form-label text-dark">Or√ßamento</label>
                            <input type="text" class="form-control form-control-sm" id="budget" name="budget">
                        </div>
                        <div class="mb-3">
                            <label for="status" class="form-label text-dark">Status *</label>
                            <select class="form-select form-select-sm" id="status" name="status" required>
                                <option value="pendente" selected>Pendente</option>
                                <option value="em_andamento">Em Andamento</option>
                                <option value="alerta">Alerta</option>
                                <option value="concluida">Conclu√≠da</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label text-dark">Descri√ß√£o</label>
                            <textarea class="form-control form-control-sm" id="description" name="description"></textarea>
                        </div>
                    </div>
                </div>
                <div class="card mb-3 border-primary border-opacity-50">
                    <div class="card-header bg-primary text-white">‚úÖ Tarefas</div>
                    <div class="card-body">
                        <div id="tasks-container">
                            <div class="task-input mb-2 d-flex align-items-center gap-2">
                                <input type="text" class="form-control form-control-sm" name="tasks[0][description]" placeholder="Descri√ß√£o da tarefa">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="task-0-completed" name="tasks[0][completed]">
                                    <label class="form-check-label text-dark" for="task-0-completed">Conclu√≠da</label>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-outline-primary btn-sm mt-2" onclick="addTaskInput()">‚ûï Adicionar Tarefa</button>
                    </div>
                </div>
                <div class="card mb-3 border-primary border-opacity-50">
                    <div class="card-header bg-primary text-white">üìù Observa√ß√µes</div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label for="note" class="form-label text-dark">Observa√ß√µes</label>
                            <textarea class="form-control form-control-sm" id="note" name="note"></textarea>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="completed" name="completed">
                            <label class="form-check-label text-dark" for="completed">A√ß√£o conclu√≠da</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="validated" name="validated">
                            <label class="form-check-label text-dark" for="validated">Validada pela coordena√ß√£o</label>
                        </div>
                        <div class="mb-3">
                            <label for="priority" class="form-label text-dark">Prioridade</label>
                            <select class="form-select form-select-sm" id="priority" name="priority">
                                <option value="low">Baixa</option>
                                <option value="medium" selected>M√©dia</option>
                                <option value="high">Alta</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <a href="/dashboard" class="btn btn-outline-secondary btn-sm">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-sm">Salvar A√ß√£o</button>
                </div>
            </form>
        </div>
    </main>
    <script>
        let taskIndex = 1;
        function addTaskInput() {
            const container = document.getElementById('tasks-container');
            const taskDiv = document.createElement('div');
            taskDiv.className = 'task-input mb-2 d-flex align-items-center gap-2';
            taskDiv.innerHTML = `
                <input type="text" class="form-control form-control-sm" name="tasks[${taskIndex}][description]" placeholder="Descri√ß√£o da tarefa">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="task-${taskIndex}-completed" name="tasks[${taskIndex}][completed]">
                    <label class="form-check-label text-dark" for="task-${taskIndex}-completed">Conclu√≠da</label>
                </div>
            `;
            container.appendChild(taskDiv);
            taskIndex++;
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>