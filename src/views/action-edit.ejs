<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema ENEDES - Editar AÃ§Ã£o</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body class="bg-white">
    <header class="bg-primary text-white text-center py-3 shadow-sm">
        <div class="container">
            <h1 class="display-5 fw-bold">Sistema ENEDES</h1>
            <nav class="mt-2 d-flex justify-content-center flex-wrap gap-2">
                <a href="/dashboard" class="btn btn-outline-light btn-sm">ðŸ“Š Dashboard</a>
                <a href="/export" class="btn btn-outline-light btn-sm">ðŸ“¥ Exportar</a>
                <a href="/logout" class="btn btn-outline-light btn-sm">ðŸšª Sair</a>
            </nav>
        </div>
    </header>
    <main class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
        <div class="p-4 rounded-3 shadow bg-white border border-primary border-opacity-50 w-100" style="max-width: 600px;">
            <h2 class="mb-4 fw-bold text-dark">Editar AÃ§Ã£o</h2>
            <% if (error) { %>
                <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form action="/action/update/<%= action.id %>" method="POST">
                <div class="mb-3">
                    <label for="task" class="form-label text-dark">Tarefa</label>
                    <input type="text" class="form-control form-control-sm" id="task" name="task" value="<%= action.task %>" required>
                </div>
                <div class="mb-3">
                    <label for="responsible" class="form-label text-dark">ResponsÃ¡vel</label>
                    <input type="text" class="form-control form-control-sm" id="responsible" name="responsible" value="<%= action.responsible %>" required>
                </div>
                <div class="mb-3">
                    <label for="deadline" class="form-label text-dark">Prazo</label>
                    <input type="date" class="form-control form-control-sm" id="deadline" name="deadline" value="<%= action.deadline.toISOString().split('T')[0] %>" required>
                </div>
                <div class="mb-3">
                    <label for="budget" class="form-label text-dark">OrÃ§amento</label>
                    <input type="text" class="form-control form-control-sm" id="budget" name="budget" value="<%= action.budget %>">
                </div>
                <div class="mb-3">
                    <label for="status" class="form-label text-dark">Status</label>
                    <select class="form-select form-select-sm" id="status" name="status">
                        <option value="pendente" <%= action.status === 'pendente' ? 'selected' : '' %>>Pendente</option>
                        <option value="em_andamento" <%= action.status === 'em_andamento' ? 'selected' : '' %>>Em Andamento</option>
                        <option value="alerta" <%= action.status === 'alerta' ? 'selected' : '' %>>Alerta</option>
                        <option value="concluida" <%= action.status === 'concluida' ? 'selected' : '' %>>ConcluÃ­da</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label text-dark">DescriÃ§Ã£o</label>
                    <textarea class="form-control form-control-sm" id="description" name="description"><%= action.description %></textarea>
                </div>
                <div class="mb-3">
                    <label for="note" class="form-label text-dark">Nota</label>
                    <textarea class="form-control form-control-sm" id="note" name="note"><%= action.note %></textarea>
                </div>
                <div class="mb-3">
                    <label for="priority" class="form-label text-dark">Prioridade</label>
                    <select class="form-select form-select-sm" id="priority" name="priority">
                        <option value="low" <%= action.priority === 'low' ? 'selected' : '' %>>Baixa</option>
                        <option value="medium" <%= action.priority === 'medium' ? 'selected' : '' %>>MÃ©dia</option>
                        <option value="high" <%= action.priority === 'high' ? 'selected' : '' %>>Alta</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="section" class="form-label text-dark">SeÃ§Ã£o</label>
                    <select class="form-select form-select-sm" id="section" name="section" required>
                        <% sections.forEach(section => { %>
                            <option value="<%= section %>" <%= action.section === section ? 'selected' : '' %>><%= section %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label text-dark">Tarefas</label>
                    <div id="tasks-container">
                        <% tasks.forEach((task, index) => { %>
                            <div class="task-input mb-2">
                                <input type="text" class="form-control form-control-sm" name="tasks[<%= index %>][description]" value="<%= task.description %>">
                            </div>
                        <% }); %>
                    </div>
                    <button type="button" class="btn btn-outline-primary btn-sm mt-2" onclick="addTaskInput()">Adicionar Tarefa</button>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">Atualizar AÃ§Ã£o</button>
            </form>
        </div>
    </main>
    <script>
        function addTaskInput() {
            const container = document.getElementById('tasks-container');
            const index = container.children.length;
            const taskDiv = document.createElement('div');
            taskDiv.className = 'task-input mb-2';
            taskDiv.innerHTML = `
                <input type="text" class="form-control form-control-sm" name="tasks[${index}][description]" placeholder="DescriÃ§Ã£o da tarefa">
            `;
            container.appendChild(taskDiv);
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>